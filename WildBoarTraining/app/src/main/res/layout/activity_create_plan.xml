<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.karol.wildboartraining.CreatePlanActivity">

    <TextView
        android:text="@string/connect_server_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lableConnection" />

    <Button
        android:text="@string/zaloguj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/log_in_button"
        android:layout_below="@+id/log_in_button"
        android:layout_alignStart="@+id/log_in_button"
        android:layout_marginTop="21dp"
        tools:ignore="NotSibling" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/log_in_button"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/lableConnection"
        android:layout_alignParentStart="true"
        tools:ignore="DuplicateIds">

        <EditText
            android:id="@+id/username"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:hint="@string/login_hint" />
        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:hint="@string/password_hint"/>
    </LinearLayout>

    <Button
        android:text="@string/new_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_account_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>